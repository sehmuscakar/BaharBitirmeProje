@model TestimonialViewModel
@{
    ViewData["Title"] = "AddTestimonial";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<form method="post">
    <label>Referans Resmi</label>
    <input type="text" asp-for="Iamge" class="form-control" />
    <br />
    <label>Referans Adı ve Soyadı</label>
    <input type="text" asp-for="Name" class="form-control" />
    <br />
    <label>Başlık</label>
    <input type="text" asp-for="Title" class="form-control" />
    <br />
    <label>Açıklama</label>
    <input type="text" asp-for="Description" class="form-control" />
    <br />
    <button class="btn btn-primary">Referans Ekle</button>
</form>



