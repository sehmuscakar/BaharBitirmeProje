@model List<ResultBookingDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
    int count=0;
}    
            <div class="card-title">
                <h4>Rezervasyonlar</h4>
            </div>
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Misafir</th>
                            <th>Yetişkin Sayısı</th>
                            <th>Çocuk Sayısı</th>
                            <th>Durum</th>
                            <th>Onayla</th>
                            <th>İptal Et</th>
                            <th>Beklet</th>
                       
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            count++;
                            <tr>
                            <th>@count</th>
                                <td>@item.Name</td>
               

                    <td>@item.AdulCount</td>
                     <td>@item.ChildCount</td>

                          
                            <td>
                                <span class="badge badge-primary px-2">@item.Status</span>
                            </td>

                    <td>  <a href="/BookingAdmin/AppRoverRezervation2/@item.BookingID" class="btn btn-outline-primary">Onayla</a> </td>
                    <td> <a href="/BookingAdmin/RezervationCancel/@item.BookingID" class="btn btn-outline-danger">İptal Et</a></td>
                    <td> <a href="/BookingAdmin/RezervationWait/@item.BookingID" class="btn btn-outline-warning">Beklet</a> </td>
                         
                         
                           
                        </tr>
                        }
                    </tbody>
                </table>
            </div>

