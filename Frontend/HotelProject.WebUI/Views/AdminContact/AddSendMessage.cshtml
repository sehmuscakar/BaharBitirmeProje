@model CreateSendMessage
@{
    ViewData["Title"] = "AddSendMessage";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}
<div class="email-left-box">
    <a href="/AdminContact/AddSendMessage/" class="btn btn-primary btn-block">Yeni Mesaj Oluştur</a>

</div>
<div class="email-right-box">
 
    <div class="compose-content mt-5">
        <form method="post">
            <div class="form-group">
                <input type="text" class="form-control bg-transparent" asp-for="ReceiverMail" placeholder="Alıcı Mail Adresi">
            </div>
            <div class="form-group">
                <input type="text" class="form-control bg-transparent" asp-for="Title" placeholder="Konu">
            </div>
            <div class="form-group">
                <input type="text" class="form-control bg-transparent" asp-for="ReceiverName" placeholder="Alıcı Adı Soyadı">
            </div>
            <div class="form-group">
                <textarea class="textarea_editor form-control bg-light" rows="15" placeholder="Mesajınızı Yazınız..." asp-for="Content"></textarea>
             
            </div>
            <div class="text-left m-t-15">
                <button class="btn btn-primary m-b-30 m-t-15 f-s-14 p-l-20 p-r-20 m-r-10"><i class="fa fa-paper-plane m-r-5"></i>Gönder</button>
            </div>
        </form>
    </div>
</div>